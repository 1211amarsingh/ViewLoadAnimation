<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:centerColor="#fff0a4"
                android:endColor="@color/colorStart"
                android:gradientRadius="360"
                android:startColor="@color/colorStart"
                android:type="radial" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>

    </item>

    <item
        android:bottom="@dimen/_3sdp"
        android:left="@dimen/_3sdp"
        android:right="@dimen/_3sdp"
        android:top="@dimen/_3sdp">
        <shape>
            <gradient
                android:centerColor="#d4b94e"
                android:endColor="@color/ColorEnd"
                android:gradientRadius="450%"
                android:startColor="#fff0a4"
                android:type="radial" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>

    </item>

</layer-list>